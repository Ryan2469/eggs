<?xml version="1.0" encoding="UTF-8"?>
<widget version="0.2">
    <title xml:lang="ko">콘텐츠 widget</title>
    <description xml:lang="ko">XEANT 전용 컨텐츠 위젯</description>
    <version>1.0</version>
    <date>2021-05-21</date>

    <author email_address="xeant@kakao.com" link="http://xeant.com/">
        <name xml:lang="ko">XEANT</name>
    </author>
    <extra_vars>
        <group>
            <title xml:lang="ko">추출 대상</title>
            <var id="content_type" type="select">
                <name xml:lang="ko">추출대상</name>
                <options>
                    <value>document</value>
                    <name xml:lang="ko">게시물</name>
                </options>
                <options>
                    <value>comment</value>
                    <name xml:lang="ko">댓글</name>
                </options>
                <options>
                    <value>image</value>
                    <name xml:lang="ko">첨부이미지</name>
                </options>
            </var>
            <var id="module_srls">
                <type>module_srl_list</type>
                <name xml:lang="ko">대상 페이지</name>
                <description xml:lang="ko">선택한 페이지에 등록된 글을 대상으로 합니다.</description>
            </var>
            <var id="list_count" type="text">
                <name xml:lang="ko">목록수</name>
                <description xml:lang="ko">출력될 목록의 수를 정할 수 있습니다. (기본 5개)</description>
            </var>
            
            <var id="subject_cut_size" type="text">
                <name xml:lang="ko">제목 글자수</name>
                <description xml:lang="ko">제목 글자수를 지정할 수 있습니다. (0또는 비우면 자르지 않습니다)</description>
            </var>
            <var id="content_cut_size" type="text">
                <name xml:lang="ko">내용 글자수</name>
            </var>
            <var id="main_gallery_title" type="text">
                <name xml:lang="ko">위젯 타이틀</name>
                <description xml:lang="ko">출력될 타이틀을 정할 수 있습니다.</description>
            </var>
        </group>
    </extra_vars>
</widget>
