<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.2">
    <title xml:lang="ko">tailwind 레이아웃</title>
    <title xml:lang="en">tailwind Layout</title>
    <description xml:lang="ko">사이트 tailwind 레이아웃.</description>
    <description xml:lang="en">Site tailwind layout.</description>
    <version>1.0</version>
    <date>2021-04-16</date>
    <author email_address="gjworks@kakao.com" link="https://gjworks.me/">
        <name xml:lang="ko">지제이웍스</name>
        <name xml:lang="en">지제이웍스</name>
    </author>
    <menus>
        <menu name="gnb" maxdepth="2" default="true">
            <title xml:lang="ko">전역 네비게이션 바</title>
        </menu>

        <menu name="main_menu" maxdepth="2" default="true">
            <title xml:lang="ko">main_menu</title>
        </menu>

        <menu name="demo_menu" maxdepth="2" default="true">
            <title xml:lang="ko">demo_menu</title>
        </menu>

        <menu name="function_menu" maxdepth="2" default="true">
            <title xml:lang="ko">function_menu</title>
        </menu>
        <menu name="design_menu" maxdepth="2" default="true">
            <title xml:lang="ko">design_menu</title>
        </menu>
        <menu name="blog_menu" maxdepth="2" default="true">
            <title xml:lang="ko">blog_menu</title>
        </menu>
    </menus>
	<extra_vars>
		
		<var name="layout_type" type="select">
			<title xml:lang="ko">레이아웃 유형</title>
			<title xml:lang="en">Layout Type</title>
			<options value="main_page">
				<title xml:lang="ko">Main Page</title>
				<title xml:lang="en">Main Page</title>
			</options>
			<options value="sub_page">
				<title xml:lang="ko">Sub Page</title>
				<title xml:lang="en">Sub Page</title>
			</options>
            <options value="sub_box">
				<title xml:lang="ko">Sub Box</title>
				<title xml:lang="en">Sub Box</title>
			</options>
		</var>
		<var name="home_href" type="text">
			<title xml:lang="ko">홈 URL</title>
            <description>로고 클릭시, 해당 페이지로 이동</description>
        </var>

	</extra_vars>
</layout>
